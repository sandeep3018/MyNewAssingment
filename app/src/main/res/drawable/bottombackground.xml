<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <size android:height="150dp" android:width="400dp"/>
            <solid android:color="@color/white"></solid>
        </shape>

    </item>
    <item android:width="450dp" android:height="160dp" android:bottom="-70dp" android:gravity="right|bottom" android:right="-40dp">
        <rotate  android:fromDegrees="160">
            <shape android:shape="rectangle">
                <solid android:color="#28223E6D"></solid>
            </shape>
        </rotate>

    </item>
    <item android:width="450dp" android:height="160dp" android:bottom="-80dp" android:gravity="right|bottom" android:right="-40dp">
        <rotate  android:fromDegrees="160">
            <shape android:shape="rectangle">
                <solid android:color="@color/colorPrimaryDark"></solid>
            </shape>
        </rotate>

    </item>
</layer-list>