<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
          <size android:height="150dp" android:width="400dp"/>
            <solid android:color="@color/white"></solid>
        </shape>

    </item>
    <item android:width="450dp" android:height="140dp" android:top="-60dp" android:gravity="left" android:left="-50dp">
        <rotate  android:fromDegrees="160">
            <shape android:shape="rectangle">
                <solid android:color="#28223E6D"></solid>
            </shape>
        </rotate>

    </item>
    <item android:width="450dp" android:height="140dp" android:top="-70dp" android:gravity="left" android:left="-50dp">
        <rotate  android:fromDegrees="160">
            <shape android:shape="rectangle">
                <solid android:color="@color/colorPrimaryDark"></solid>
            </shape>
        </rotate>

    </item>
</layer-list>